<%= form_for(@user) do |f| %>

<div class="header">
</div>

<div class="form">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :zip %><br />
    <%= f.text_field :zip %>
  </div>
</div>

<div class="actions">
   <%= f.submit "Submit"%>
</div>

<% end %>
